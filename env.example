# =================================
# CloudLens Environment Variables
# =================================

# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# =================================
# Supabase Configuration
# =================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# =================================
# WorkOS Configuration
# =================================
WORKOS_CLIENT_SECRET=your_workos_client_secret
WORKOS_CLIENT_ID=your_workos_client_id
WORKOS_WEBHOOK_SECRET=your_workos_webhook_secret
WORKOS_API_KEY=your_workos_api_key

# =================================
# Security Keys
# =================================
# Generate JWT secret with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-must-be-at-least-32-characters-long

# Generate encryption key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-base64-encoded-encryption-key

# =================================
# Email Configuration (Optional)
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=CloudLens
SMTP_USE_TLS=true

# =================================
# Application Settings
# =================================
ENVIRONMENT=production
API_DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://frontend:3000
PASSWORD_RESET_BASE_URL=http://localhost:3000
LOG_LEVEL=INFO

# =================================
# Database Configuration (for local development)
# =================================
# Note: These are overridden in docker-compose.yml for container networking
DATABASE_HOSTNAME=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=cloudlens_user
DATABASE_PASSWORD=cloudlens_password
DATABASE_NAME=cloudlens_db

# =================================
# Frontend Configuration
# =================================
# Note: NEXT_PUBLIC_BACKEND_URL is overridden in docker-compose.yml for container networking
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
NODE_ENV=production 